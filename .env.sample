# Sample environment variables for Twiller project
# Copy this file to .env and fill values before running the app

# MongoDB connection (e.g., mongodb://localhost:27017/twiller)
MONGO_URI=

# JWT secret for signing tokens
JWT_SECRET=changeme

# Express session secret
SESSION_SECRET=changeme-session

# SMTP settings (use Mailtrap for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=

# Stripe (if you want to test real checkout)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Frontend API URL (used by frontend build)
REACT_APP_API_URL=http://localhost:5000/api

# Optional: ffmpeg/ffprobe path override (if ffprobe not on PATH)
FFPROBE_PATH=
